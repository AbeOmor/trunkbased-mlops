{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string"
        },
        "workspaceName": {
            "type": "string"
        },
        "resourceGroupName": {
            "type": "string"
        },
        "vnetName": {
            "type": "string",
            "defaultValue": ""
        },
        "subnetName": {
            "type": "string",
            "defaultValue": ""
        },
        "adminUserName": {
            "type": "securestring"
        },
        "adminPassword": {
            "type": "securestring"
        }
    },
    "functions": [],
    "variables": {
        "deploymentName": "[concat('clusters-', deployment().name)]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "name": "[concat('cpu-', variables('deploymentName'))]",
            "resourceGroup": "[parameters('resourceGroupName')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "relativePath": "templates/cluster.json"
                },
                "parameters": {
                    "workspaceName": {
                        "value": "[parameters('workspaceName')]"
                    },
                    "clusterName": {
                        "value": "cluster-cpu"
                    },
                    "minNodeCount": {
                        "value": 0
                    },
                    "maxNodeCount": {
                        "value": 3
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "adminUserName": {
                        "value": "[parameters('adminUserName')]"
                    },
                    "adminUserPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "vmSize": {
                        "value": "Standard_D1"
                    },
                    "vnetResourceGroupName": {
                        "value": "[parameters('resourceGroupName')]"
                    },
                    "vnetName": {
                        "value": "[parameters('vnetName')]"
                    },
                    "subnetName": {
                        "value": "[parameters('subnetName')]"
                    }
                }
            },
            "dependsOn": [
                "[variables('deploymentName')]"
            ]
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "name": "[concat('gpu-', variables('deploymentName'))]",
            "resourceGroup": "[parameters('resourceGroupName')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "relativePath": "templates/cluster.json"
                },
                "parameters": {
                    "workspaceName": {
                        "value": "[parameters('workspaceName')]"
                    },
                    "clusterName": {
                        "value": "cluster-gpu"
                    },
                    "minNodeCount": {
                        "value": 0
                    },
                    "maxNodeCount": {
                        "value": 3
                    },
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "adminUserName": {
                        "value": "[parameters('adminUserName')]"
                    },
                    "adminUserPassword": {
                        "value": "[parameters('adminPassword')]"
                    },
                    "vmSize": {
                        "value": "Standard_NC6"
                    },
                    "vnetResourceGroupName": {
                        "value": "[parameters('resourceGroupName')]"
                    },
                    "vnetName": {
                        "value": "[parameters('vnetName')]"
                    },
                    "subnetName": {
                        "value": "[parameters('subnetName')]"
                    }
                }
            },
            "dependsOn": [
                "[variables('deploymentName')]"
            ]
        }
    ],
    "outputs": {}
}